<div class="card mb-4 shadow-sm">
  <div class="card-header bg-light">
    <h4 class="mb-0"><%= @student.name %></h4>
  </div>
  <div class="card-body">
    <p><strong>Year Level:</strong> <%= @student.year_level %></p>
    <p><strong>Program:</strong> <%= @student.program %></p>
  </div>
</div>
<h5 class="mb-3">📚 List of Subjects</h5>
<table class="table table-bordered table-striped">
  <thead class="table-light">
    <tr>
      <th>Name</th>
      <th>Section</th>
      <th>Units</th>
      <th>Teacher</th>
    </tr>
  </thead>
  <tbody>
    <% @student.classlists.each do |classlist| %>
      <tr>
        <td><%= classlist.section.subject.name %></td>
        <td><%= classlist.section.name %></td>
        <td><%= classlist.section.subject.number_of_units %></td>
        <td><%= classlist.section.subject.teacher.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="d-flex justify-content-between mt-4 align-items-center">
  <div>
    <%= link_to "← Back to Students", students_path, class: "btn btn-secondary" %>
  </div>
  <div class="btn-group">
    <%= link_to "Edit Student", edit_student_path(@student), class: "btn btn-warning" %>
    <%= button_to "Delete", @student,
          method: :delete,
          data: { confirm: "Are you sure you want to delete this student?" },
          class: "btn btn-danger" %>
  </div>
</div>

